<!-- Shared/MainLayout.razor -->
<!-- This is the shared layout component that will be used by all the pages in the application. The @body will be updated
With the requested page. This is how a 'single page' application renders in blazor -->
@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

