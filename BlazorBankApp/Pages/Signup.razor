<!-- Pages/Signup.razor -->
@page "/signup"
<!-- include the User Model to acess their properties -->
@using BlazorBankApp.Models
<!-- include the services logics to acess their properties -->
@using BlazorBankApp.Services
@inject BankService BankService
@inject NavigationManager Navigation

<h3>Signup</h3>
<!-- EditForm component to handle user input and form validation -->
<EditForm Model="signupModel" OnValidSubmit="HandleSignup">
    <!-- Validator for data annotations and validation errors-->
    <DataAnnotationsValidator />
    <ValidationSummary />

    <!-- Input fields for user data with bootstrap classes -->
    <div class="form-group">
        <label for="username">Username</label>
        <InputText id="username" class="form-control" @bind-Value="signupModel.Username" />
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <InputText id="email" class="form-control" @bind-Value="signupModel.Email" />
    </div>

    <div class="form-group">
        <label for="age">Age</label>
        <InputNumber id="age" class="form-control" @bind-Value="signupModel.Age" />
    </div>

    <div class="form-group">
        <label for="phone">Phone</label>
        <InputText id="phone" class="form-control" @bind-Value="signupModel.Phone" />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <InputText id="password" class="form-control" type="password" @bind-Value="signupModel.Password" />
    </div>

    <button type="submit" class="btn btn-primary">Signup</button>
</EditForm>

@code {
    // access to User Model data or User class and create new instance we need this method for HTML Form.
    private User signupModel = new User();
    // create a variable of boolean type to check if signup faild or success
    private bool signupFailed;
    // this method is used to handle the main logic of checking signup.
    private void HandleSignup()
    {
        // we conditionallly check if the Singup method which comes from BankService class with methof of Signup has the user model or user class. if so.
        if (BankService.Signup(signupModel))
        {
            // use the built-in navigation to automatically direct the user to login section (login page) after user singup
            Navigation.NavigateTo("/login");
        }
        // otherwise the user didn't singup correctly and we failed the condition to by seting signupFailed = true that means user should stay in corrent page.
        else
        {
            signupFailed = true;
        }
    }
}